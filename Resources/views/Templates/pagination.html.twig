{# default Sliding pagination control implementation #}
<div class="text-center content-group-lg pt-20">
    {% if pageCount > 1 %}
        <ul class="pagination">
            {% if first is defined and current != first %}
                <li>
                    <a class="legitRipple"href="{{ path(route, query|merge({(pageParameterName): first})) }}"><i class="icon-arrow-small-left"></i></a>
                </li>
            {% endif %}

            {% if previous is defined %}
                <li>
                    <a class="legitRipple" href="{{ path(route, query|merge({(pageParameterName): previous})) }}"><i class="icon-arrow-small-left"></i></a>
                </li>
            {% endif %}

            {% for page in pagesInRange %}
                {% if page != current %}
                    <li>
                        <a class="legitRipple" href="{{ path(route, query|merge({(pageParameterName): page})) }}">{{ page }}</a>
                    </li>
                {% else %}
                    <li class="active">
                        <span class="current">{{ page }}</span>
                    </li>
                {% endif %}

            {% endfor %}

            {% if next is defined %}
                <li>
                    <a class="legitRipple" href="{{ path(route, query|merge({(pageParameterName): next})) }}"><i class="icon-arrow-small-right"></i></a>
                </li>
            {% endif %}

            {% if last is defined and current != last %}
                <li>
                    <a class="legitRipple" href="{{ path(route, query|merge({(pageParameterName): last})) }}"><i class="icon-arrow-small-right"></i></a>
                </li>
            {% endif %}
        </ul>
    {% endif %}
</div>